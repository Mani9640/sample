@model IEnumerable<string>
@{ }

<div class="btn btn-block btn-default" style="margin-top:3px">
  @Html.ActionLink("Home","List","Product")

</div>
@foreach (var item in Model)
{
  <div class="btn btn-block btn-default @(item ==  ViewBag.selectedCategory ? "btn-success" : null)">
    @Html.RouteLink(item, new {controller="Product",action="List",category=item,page=1})
  </div>
  }