
@model  SportsStoreMVCWenApp.Models.ProductsListViewModels
@{
  ViewBag.Title = "List";
}

<h4>Product List Count-@Model.Products.Count()</h4>

<div class="row">


  @foreach (var item in Model.Products)
  {
  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

    @Html.Partial("_productSummary", item)
  </div>
  }
</div>

<hr style="background-color:saddlebrown;height:2px;"/>

<div>
  @Html.Partial("_productsPager", Model.GPager);
</div>

