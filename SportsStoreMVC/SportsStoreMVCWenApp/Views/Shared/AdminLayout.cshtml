<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sports Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
  <div class="container-fluid">
    <div class="navbar navbar-fixed-top bg-purple">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          @Html.ActionLink("Sports Store", "List", "Product", new { area = "" }, new { @class = "navbar-brand textWhite" })
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Home", "Index", "Home",new {@class="textWhite" })</li>
            <li>@Html.ActionLink("About", "About", "Home", new { @class = "textWhite" })</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home", new { @class = "textWhite" })</li>
          </ul>
          @Html.Partial("_LoginPartial")

          @if(TempData["message"]!=null)
          {
          <div class="navbar-right" style="margin:15px 5px 1px 1px;background-color:burlywood;@TempData["message"]"></div>
          }
  
        </div>
      </div>
    </div>
    <div class="row">
   
        <div class="container body-content">
          @RenderBody()
        </div>
    </div>
    <div class="navbar bg-purple navbar-fixed-bottom">
      <footer>
        <h4 style="margin:15px 5px;color:aqua;">&copy; @DateTime.Now.Year - Sports Store</h4>
      </footer>
    </div>

  </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
